#!/bin/bash

set -e

cd `dirname "${0}"`

if [[ -n "${PFB_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
         "Usage: $(basename "$0")

Sets up the development environment by installing dependencies.
See the Getting Started section of the project README for importing data

"
}

if [ "${BASH_SOURCE[0]}" = "${0}" ]
then
    if [ "${1:-}" = "--help" ]
    then
        usage
    else
        # Ensure aws config dir exists on host, so it can be mounted into VM
        mkdir -p ~/.aws
        pushd ..

        vagrant up --provision

        vagrant ssh -c "cd /vagrant && ./scripts/update --load-data"

        popd
    fi
fi
